                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>




        <!--- Column 0 -->
        <Button x:Name="btnColumn0" Content="1" Focusable="True" Height="46" Width="92" Click="btnColumn0_Click" Foreground="White" BorderThickness="5,5,5,5" Background="#00DDDDDD" BorderBrush="White" FontSize="24" Canvas.Left="473" Canvas.Top="498" >
