            <Button.Background>
                <ImageBrush ImageSource="\source\Cards\RETRO.jpg"/>
            </Button.Background>
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button x:Name="btnCarta" Content="" Height="124" Canvas.Left="134" Canvas.Top="407" Width="93" HorizontalAlignment="Left" VerticalAlignment="Top" BorderThickness="2,2,2,2" BorderBrush="#FFFFFF">
